    </head>
    <body>
         <div style="background: linear-gradient(to bottom,#010217,#1d1557); width:100vw; height:20vh;">
          <%-include('include/header')%>
        </div>
          <!--To create the header text and background image-->
          <div class="container">
            <div class="topnav" style="margin-top:0px;">
                <marquee>
                    Sales are currently active now a days so grab the items per your choice
                </marquee>
                <!-- <input type="text" placeholder="Search.." name="search" id="search"> -->
            </div>
            <!--section for sale in bottom of the website-->
            <div class="sales" style="margin-top:50px;">
                <div class="title">
                    <h2>Cart Items</h2>
                    <div class="line"></div>
                </div>
                <div class="allitems">
                    <hr/>
                    <div class="row" style="width:80%;height: auto;">
                        <h2>ID</h2>
                        <h2>Item</h2>
                        <h2>Quantity</h2>
                        <h2>Price</h2>
                    </div>
                    <%for(var i=0;i<items.length;i++){%>
                    <div class="row">
                        <h2><%=i+1%></h4>
                            <img src="<%=items[i].items.image%>" width="100" height="100" style="margin-left:20px;"/>
                        <h4><%=items[i].items.title%></h4>
                        <h4><%=items[i].items.price%></h4>
                    </div>
                    <hr/>
                    <%}%>
                </div>

                </div>
            <section class="explore">
                <img src="#" class="forward" style="z-index:-1;"/>
                <img src="#" class="backward" style="z-index:-1;"/>
            </section>
        </div>
            <%-include('include/footer')%>


            <script>
                function setItem(id) {
                    localStorage.setItem("id", id);
                }
            </script>
            <script src="/js/script.js"></script>
        </body>
